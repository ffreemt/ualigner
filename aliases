alias python='/usr/bin/python3.9'
alias install-poetry="curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/install-poetry.py | python3.9 -"
alias poetry="/root/.local/bin/poetry"
alias pip='python3.9 -m pip'

apt install python3-pip -q
python -m pip install poetry -q

